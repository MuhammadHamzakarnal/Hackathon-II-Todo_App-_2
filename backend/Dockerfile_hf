# Use the official Python image from the Docker Hub
FROM python:3.9-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Set the working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy the requirements file
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Verify that pydantic-settings is installed
RUN python -c "import pydantic_settings; print('pydantic_settings version:', pydantic_settings.__version__)"

# Verify bcrypt version - bcrypt 4.0.1 is the last version with __about__ module for passlib compatibility
# If this fails, the bcrypt_fix in auth_service.py will handle it at runtime
RUN python -c "import bcrypt; print('bcrypt version:', bcrypt.__version__)"

# Copy the rest of the application
COPY . .

# Expose the port (Hugging Face Spaces uses PORT environment variable)
EXPOSE ${PORT:-7860}

# Run the application
CMD ["sh", "-c", "uvicorn src.main:app --host 0.0.0.0 --port ${PORT:-7860}"]